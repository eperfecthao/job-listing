<h2>后台工作列表</h2>
<%= link_to "新增工作", new_admin_job_path, class: "btn btn-primary pull-right" %>

<table class="table">
  <thead>
    <tr>
      <th>标题</th>
      <th>描述</th>
      <th colspan="2">管理</th>
      <th>联系方式</th>
    </tr>
  </thead>

  <tbody>
    <% @jobs.each do |job| %>
      <tr>
        <td>
          <%= job.title %>
        </td>
        <td>
          <%= job.description %>
        </td>
        <td>
          <%= link_to "Edit", edit_admin_job_path(job), class: "btn btn-default" %>
        </td>
        <td>
          <%= link_to "Delete", admin_job_path(job), method: :delete,
          class: "btn btn-default", data: {confirm: "你确定吗?"} %>
        </td>
        <td>
          <%= job.contact_email %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
