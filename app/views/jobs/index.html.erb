<h1>Jobs</h1>


<table class="table table-bordered">
  <thead>
    <tr>
      <th>标题</th>
      <th>描述</th>
      <th>薪资下限</th>
      <th>薪资上限</th>
      <th>工作更新时间</th>
    </tr>
  </thead>
    <% @jobs.each do |job|  %>
      <tr>
        <td>
          <%= link_to job.title, job_path(job) %>
        </td>
        <td>
          <%= job.description %>
        </td>
        <td>
          <%= job.wage_lower_bound %>
        </td>
        <td>
          <%= job.wage_upper_bound %>
        </td>
        <td>
          <%= time_ago_in_words(job.created_at) %> ago
        </td>
      </tr>
    <% end %>
  <tbody>

  </tbody>
</table>
